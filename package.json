{
    "name": "sol-dbg",
    "version": "0.0.4",
    "description": "Small (experimental) Solidity-level debugger built around EthereumJS",
    "keywords": [],
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf dist/",
        "transpile": "tsc",
        "build": "npm run clean && npm run transpile",
        "lint": "eslint src/ test/ --ext=ts",
        "lint:fix": "eslint src/ test/ --ext=ts --fix",
        "test": "nyc mocha -r ts-node/register",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@ethereumjs/block": "^3.6.3",
        "@ethereumjs/common": "^2.6.5",
        "@ethereumjs/tx": "^3.5.2",
        "@ethereumjs/vm": "^5.9.3",
        "@remix-project/remix-simulator": "^0.2.14",
        "cbor": "^8.1.0",
        "ethereumjs-util": "^7.1.5",
        "solc-typed-ast": "^13.0.2",
        "src-location": "^1.1.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.7",
        "@types/fs-extra": "^9.0.13",
        "@types/lru-cache": "^5.1.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.20.55",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "expect": "^28.1.1",
        "fs-extra": "^10.1.0",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4"
    },
    "homepage": "https://github.com/ConsenSys/sol-dbg",
    "bugs": "https://github.com/ConsenSys/sol-dbg/issues",
    "repository": "https://github.com/ConsenSys/sol-dbg",
    "license": "See LICENCE file."
}
