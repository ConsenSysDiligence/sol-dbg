{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": false,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },

    "include": ["src/**/*"],
    "exclude": [
        "src/faash/command_lang/parser_header.ts",
        "src/faash/partial_command_lang/parser_header.ts"
    ]
}
